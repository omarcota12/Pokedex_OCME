<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pokedex_OCME.Vista.Pokemon.Detallepokemon"
             NavigationPage.HasNavigationBar="False"
             xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0">


                <GradientStop Color="{Binding parametrosRecibe.Colorpoder}" Offset="0.1"/>
                <GradientStop Color="{Binding parametrosRecibe.Colorfondo}" Offset="0.8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackLayout Margin="10,0,10,0">
            <Image Source="https://i.ibb.co/r6d9rnQ/volver.png"
               HeightRequest="25"
               HorizontalOptions="Start"
               Margin="10,20,0,0"
               >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Volvercommand}"/>
                </Image.GestureRecognizers>
            </Image>
            <Label Text="{Binding parametrosRecibe.NroOrden}"
               FontSize="50"
               FontAttributes="Bold"
               TextColor="White"
               />
            <Image Source="{Binding parametrosRecibe.icono}"
               HeightRequest="350"
               />
            <Label Text="{Binding parametrosRecibe.Nombre}"
               FontSize="40"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"/>
            <Grid >
                <sharpnado:MaterialFrame 
                CornerRadius="15"
                MaterialBlurStyle="Light"
                MaterialTheme="AcrylicBlur"
                />
                <StackLayout Orientation="Horizontal"
                         Margin="20,10,20,10">
                    <StackLayout>
                        <Label Text="{Binding parametrosRecibe.Poder}"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="White"/>
                        <Label Text="poder"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand"
                             >
                        <StackLayout Orientation="Horizontal"
                                 VerticalOptions="CenterAndExpand">
                            <BoxView HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="{Binding parametrosRecibe.Colorfondo}"
                             CornerRadius="15"
                             VerticalOptions="Center"/>
                            <BoxView HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="{Binding parametrosRecibe.Colorpoder}"
                             CornerRadius="15"
                             VerticalOptions="Center"/>
                        </StackLayout>

                        <Label Text="colores"
                           TextColor="White"
                           HorizontalOptions="Center"
                          />
                    </StackLayout>
                    <StackLayout>
                        <Label Text="{Binding parametrosRecibe.NroOrden}"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="White"/>
                        <Label Text="orden"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>

            </Grid>
            <Frame CornerRadius="30"
               Margin="0,20,0,0"
               HeightRequest="65"
               HasShadow="False"
               Padding="0">
                <Grid ColumnDefinitions="*,*">
                    <Button Text="seguir"
                        BackgroundColor="#5adf77"
                        CornerRadius="30"
                        FontAttributes="Bold"
                        Margin="-5,0,0,0"/>
                    <StackLayout Grid.Column="1" Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal">
                            <Image Source="https://i.ibb.co/z67TBnR/tubo-de-sangre.png"
                               HeightRequest="35"
                               Margin="0,0,-10,0"/>
                            <Label Text="YouTube"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding parametrosRecibe.icono}"
                               HeightRequest="35"
                               />
                            <Label Text="fb"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>
                        </StackLayout>
                    </StackLayout>
                </Grid>
            </Frame>
        </StackLayout>
    </Grid>
</ContentPage>